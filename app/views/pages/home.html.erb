<div class="row">
    <div class="col-sm-4 col-md-3">
        <div class="panel panel-default">
          <div class="panel-body">
            Profile
          </div>
        </div>
        
        <div class="panel panel-default">
          <div class="panel-body">
            Trends
          </div>
        </div>
    </div>
    <div class="col-sm-8 col-md-6">
      <div class="list-group">
        <span class="list-group-item active clearfix">
          <%= render '/components/post_form' %>
        </span>
        <% for @p in @posts %>
        <% userName = User.find(@p.user_id).username %>
        <span class="list-group-item clearfix">
          <div class="col-xs-1">
            <img src="/avatar.jpg" alt="Profile picture" width="40px" height="40px" class="img-rounded" style="margin-left: -10px; vertical-align: top;">
            <% @p.user_id %>
          </div>
          <div class="col-xs-11">
            <p class="post-title">
              <a href="/user/<%= userName %>" class="post-owner"><%= userName %></a> 
              <span class="post-username">@<%= userName %></span> - 
              <span class="post-timestamp"><%= @p.created_at.to_formatted_s(:short) %></span>
            </p>
            <p class="post-content"><%= @p.content %></p>
          </div>
          <div class="col-xs-11 col-xs-offset-1">
            <p class="post-links">
              <span class="glyphicon glyphicon-share-alt" aria-hidden="true" data-toggle="tooltip" data-placement="top" title="Reply"></span>
              <span class="glyphicon glyphicon-retweet" aria-hidden="true" data-toggle="tooltip" data-placement="top" title="Retweet"></span>
              <span class="glyphicon glyphicon-heart" aria-hidden="true" data-toggle="tooltip" data-placement="top" title="Like"></span>
              <span class="glyphicon glyphicon-option-horizontal" aria-hidden="true"></span>
              <span class="post-conversation">View conversation</span>
            </p>
          </div>
        </span>
        <% end %>
        <span class="list-group-item" style="text-align: center;">
          <h4 class="list-group-item-heading"><span class="glyphicon glyphicon-send" aria-hidden="true"></span></h4>
          <p class="list-group-item-text"><a href="#top">Back to top ↑</a></p>
        </span>
      </div>
    </div>
    <div class="col-sm-12 col-md-3">
        <div class="panel panel-default">
          <div class="panel-body">
            Who to follow
          </div>
        </div>
        
        <div class="panel panel-default">
          <div class="panel-body">
            <p>© 2017 Burung Biru <a href="#">About</a> <a href="#">Help Center</a> <a href="#">Terms</a> <a href="#">Privacy policy</a> <a href="#">Cookies</a> <a href="#">Ads info</a> <a href="#">Brand</a> <a href="#">Blog</a> <a href="#">Status</a> <a href="#">Apps</a> <a href="#">Jobs</a> <a href="#">Businesses</a> <a href="#">Developers</a></p>
          </div>
          <div class="panel-footer"><a href="#">Advertise with Burung Biru</a></div>
        </div>
    </div>
</div>
