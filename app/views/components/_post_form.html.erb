<%= form_for(@newPost) do |f| %>

  <div class="form-group">
    <%= f.text_area :content, :class => "form-control", :placeholder => "Apa yang menarik hari ini?", autofocus: true %>
  </div>
  
  <div class="actions form-group">
    <%= f.button :submit, :class => "btn btn-primary btn-block" do %>
      <span class="glyphicon glyphicon-edit" aria-hidden="true"></span> Tweet
    <% end %>
  </div>
<% end %>