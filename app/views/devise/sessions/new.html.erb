<div class="authform">  
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => 'form-signin'}) do |f| %>

  <h2 class="form-signin-heading">Log in</h2>
  
  <label for="user_email" class="sr-only">Email address</label>
  <%= f.email_field :email, :class => "form-control top", :placeholder => "Email address", required: true, autofocus: true %>
  
  <label for="user_password" class="sr-only">Password</label>
  <%= f.password_field :password, :class => "form-control bottom", :placeholder => "Password", required: true, autocomplete: "off" %>
  
  <% if devise_mapping.rememberable? -%>
  <div class="checkbox">
    <%= f.label :remember_me do %>
      <%= f.check_box :remember_me %>
      Remember me
    <% end %>
  </div>
  <% end -%>
  
  <div class="actions">
    <%= f.button "Log in", :type => "submit", :class => "btn btn-lg btn-primary btn-block" %>
  </div>
  
  <%= render "devise/shared/links" %>
  <% end %>
</div>
